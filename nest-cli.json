{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "templates/*",
        "watchAssets": true
      },
      {
        "include": "../keys/*",
        "outDir": "./dist/keys",
        "watchAssets": true
      }
    ]
  },
  "generateOptions": {
    "spec": false
  }
}
